{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "type.json",
  "type": "object",
  "description": "The configuration for a item type.",
  "properties": {
    "key": {
      "type": "string",
      "description": "The unique identifier for the type",
      "minLength": 1,
      "maxLength": 32,
      "pattern": "^[a-z]\\w{0,31}$"
    }
  },
  "required": [
    "key"
  ]
}
